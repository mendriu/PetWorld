@page "/history"
@using PetWorld.Domain.Entities
@using PetWorld.Domain.Interfaces
@inject IChatHistoryRepository ChatHistoryRepository

<PageTitle>PetWorld - Historia</PageTitle>

<h1>Historia rozmow</h1>

@if (isLoading)
{
    <div class="d-flex justify-content-center">
        <div class="spinner-border" role="status">
            <span class="visually-hidden">Ladowanie...</span>
        </div>
    </div>
}
else if (chatHistories == null || !chatHistories.Any())
{
    <div class="alert alert-info">
        Brak zapisanych rozmow. Zadaj pytanie na stronie glownej, aby rozpoczac.
    </div>
}
else
{
    <div class="table-responsive">
        <table class="table table-striped table-hover">
            <thead class="table-dark">
                <tr>
                    <th style="width: 150px;">Data</th>
                    <th style="width: 250px;">Pytanie</th>
                    <th>Odpowiedz</th>
                    <th style="width: 80px;">Iteracje</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var history in chatHistories)
                {
                    <tr>
                        <td>@history.CreatedAt.ToLocalTime().ToString("yyyy-MM-dd HH:mm")</td>
                        <td>
                            <div class="text-truncate" style="max-width: 250px;" title="@history.Question">
                                @history.Question
                            </div>
                        </td>
                        <td>
                            <details>
                                <summary class="text-truncate" style="max-width: 400px; cursor: pointer;">
                                    @(history.Answer.Length > 100 ? history.Answer.Substring(0, 100) + "..." : history.Answer)
                                </summary>
                                <div class="mt-2 p-2 bg-light rounded" style="white-space: pre-wrap;">
                                    @history.Answer
                                </div>
                            </details>
                        </td>
                        <td class="text-center">
                            <span class="badge bg-secondary">@history.IterationCount</span>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}

@code {
    private IEnumerable<ChatHistory>? chatHistories;
    private bool isLoading = true;

    protected override async Task OnInitializedAsync()
    {
        try
        {
            chatHistories = await ChatHistoryRepository.GetAllAsync();
        }
        finally
        {
            isLoading = false;
        }
    }
}
